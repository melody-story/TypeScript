//src안의 모든 파일을 컴파일 한다는 뜻
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "sourceMap": true,
        "outDir": "dist"    
    },
    "include": ["src/**/*"],    
    "exclude": ["node_modules"]
}